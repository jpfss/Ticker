<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.earth.ticker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SkeletonActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetailsEventActivity" >
        </activity>
        <activity android:name=".NewEventActivity" >
        </activity>
        <activity android:name=".NowActivity" >
        </activity>
        <activity android:name=".AddDeleteFolderActivity" >
        </activity>
        <activity android:name=".NoteActivity" >
        </activity>
        <activity android:name=".NoteListActivity" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.VIBRATE" />

</manifest>